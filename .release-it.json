{
  "git": {
    "requireBranch": "v4",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": ["git pull", "npm run build"]
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "skipChecks": true
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
